<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:id="@id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/bg_lianxi" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical" >
 <TextView
                    android:id="@+id/tiganxuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="題目"
                    android:textStyle="bold"
                    android:textSize="9pt" >              
                </TextView>
            <EditText
                android:id="@id/pro_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="9pt" >
            </EditText>        
                <TextView
                    android:id="@id/radioA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="答案A:"
                    android:textSize="9pt" >

              
                </TextView>
                   <EditText
                        android:id="@+id/E_answerA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项A"
                        >
                    </EditText>
                <TextView
                    android:id="@id/radioB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案B:"
                    android:textSize="9pt" >
                </TextView>
  <EditText
                        android:id="@+id/E_answerB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项B"
                        >
                    </EditText>
                <TextView
                    android:id="@id/radioC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案C:"
                    android:textSize="9pt" >
                </TextView>
  <EditText
                        android:id="@+id/E_answerC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项C"
                        >
                    </EditText>
                <TextView
                    android:id="@id/radioD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案D:"
                    android:textSize="9pt" >
                </TextView> 
                <EditText
                        android:id="@+id/E_answerD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项D"
                        >
                    </EditText>
                     <TextView
                    android:id="@+id/radioE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案D:"
                    android:textSize="9pt" >
                </TextView> 
                <EditText
                        android:id="@+id/E_answerE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项D"
                        >
                    </EditText>
                     <TextView
                    android:id="@+id/radioF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案D:"
                    android:textSize="9pt" >
                </TextView> 
                <EditText
                        android:id="@+id/E_answerF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="我是选项D"
                        >
                    </EditText>
                 <TextView
                    android:id="@+id/MyAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确答案:"
                    android:textSize="9pt" >
                </TextView> 
                <EditText
                        android:id="@+id/E_MyAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:gravity="center"
                        android:text="答案"
                        >
                    </EditText>
 <TextView
                    android:id="@+id/MyTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPS:"
                    android:textSize="9pt" >
                </TextView> 
                <EditText
                        android:id="@+id/E_MyTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:text="注释"
                        >
                    </EditText>
            <TextView
                android:id="@id/promptText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@id/forwordBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="上一题"
            android:visibility="gone" >
        </Button>

        <Button
            android:id="@id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="2.70"
            android:background="@drawable/review_email"
            android:text="保存修改" />     
        <Button
            android:id="@id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0sp"
            android:text="下一题"
            android:visibility="gone" >
        </Button>
    </LinearLayout>

</LinearLayout>